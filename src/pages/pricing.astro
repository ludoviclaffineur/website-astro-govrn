---
import Layout from '../layouts/Layout.astro';

const plans = [
  {
    name: "Basic",
    price: "299",
    description: "Perfect for small boards and organizations",
    features: [
      "Up to 10 board members",
      "Document storage",
      "Basic meeting management",
      "Email notifications",
      "Standard support"
    ]
  },
  {
    name: "Advanced",
    price: "599",
    description: "Ideal for growing organizations",
    features: [
      "Up to 25 board members",
      "Advanced document management",
      "Custom workflows",
      "Analytics dashboard",
      "Priority support"
    ],
    popular: true
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For large organizations with complex needs",
    features: [
      "Unlimited board members",
      "Custom integration",
      "Advanced security features",
      "Dedicated success manager",
      "24/7 premium support"
    ]
  }
];

const additionalFeatures = [
  {
    category: "Security & Compliance",
    features: [
      "GDPR Compliance",
      "End-to-end encryption",
      "Two-factor authentication",
      "Role-based access control",
      "Audit logs"
    ]
  },
  {
    category: "Meeting Management",
    features: [
      "AI-powered agenda builder",
      "Document annotation",
      "Real-time collaboration",
      "Automated minutes",
      "Action item tracking"
    ]
  },
  {
    category: "Board Intelligence",
    features: [
      "Strategic insights dashboard",
      "Performance analytics",
      "Risk monitoring",
      "Compliance tracking",
      "Custom reporting"
    ]
  }
];
---

<Layout title="Pricing - Govrn Board Management Software">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Simple, Transparent
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Pricing
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Choose the perfect plan for your organization's needs. All plans include our core features with flexible options to scale.
          </p>
        </div>
      </div>
    </section>

    <!-- Pricing Cards -->
    <section class="py-20 bg-white relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-8 lg:grid-cols-3 sm:grid-cols-2 grid-cols-1">
          {plans.map(plan => (
            <div class={`relative bg-white rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all duration-300 ${plan.popular ? 'ring-2 ring-primary' : 'ring-1 ring-gray-200'}`}>
              {plan.popular && (
                <div class="absolute top-0 right-0 bg-primary text-white px-4 py-1 text-sm font-medium rounded-bl-lg">
                  Most Popular
                </div>
              )}
              <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-900">{plan.name}</h3>
                <p class="mt-2 text-gray-500">{plan.description}</p>
                <div class="mt-6">
                  <p class="inline-flex items-baseline">
                    <span class="text-5xl font-extrabold tracking-tight text-gray-900">${plan.price}</span>
                    {plan.price !== "Custom" && <span class="text-lg text-gray-500">/month</span>}
                  </p>
                </div>
                <ul class="mt-8 space-y-4">
                  {plan.features.map(feature => (
                    <li class="flex items-center">
                      <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="ml-3 text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>
                <div class="mt-8">
                  <a
                    href="#"
                    class={`block w-full text-center px-6 py-4 text-lg font-medium rounded-xl transition-colors duration-200 ${
                      plan.popular
                        ? 'text-white bg-primary hover:bg-primary/90'
                        : 'text-primary bg-white border-2 border-primary/20 hover:bg-primary/5'
                    }`}
                  >
                    {plan.price === "Custom" ? "Contact Sales" : "Get Started"}
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Additional Features -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">Everything You Need for Effective Board Management</h2>
          <p class="mt-4 text-xl text-gray-600">All plans include these powerful features to drive your board's success</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {additionalFeatures.map(category => (
            <div class="bg-white rounded-xl p-8 shadow-sm">
              <h3 class="text-xl font-bold text-gray-900 mb-6">{category.category}</h3>
              <ul class="space-y-4">
                {category.features.map(feature => (
                  <li class="flex items-center text-gray-600">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">Frequently Asked Questions</h2>
          <p class="mt-4 text-xl text-gray-600">Find answers to common questions about our pricing and plans</p>
        </div>

        <div class="space-y-8">
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">Can I switch plans later?</h3>
            <p class="mt-2 text-gray-600">Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle.</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">Is there a free trial?</h3>
            <p class="mt-2 text-gray-600">Yes, we offer a 14-day free trial on all plans so you can experience Govrn's features before committing.</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">What payment methods do you accept?</h3>
            <p class="mt-2 text-gray-600">We accept all major credit cards, and for Enterprise plans, we can arrange alternative payment methods.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-8">
          Ready to Transform Your Board Management?
        </h2>
        <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
          Join leading organizations that trust Govrn to power their board's success
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
          >
            Start Free Trial
          </a>
          <a
            href="#"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white border-2 border-white hover:bg-white/10 transition-colors duration-200"
          >
            Talk to Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>