const featuredResource = {
  title: "The Future of AI in the Boardroom: Challenges and Opportunities",
  description: "A comprehensive study examining the current landscape of AI adoption in boardrooms across private, public, and third sectors. Through extensive interviews with board members and governance professionals, we explore the challenges, opportunities, and potential solutions for integrating AI into board management processes.",
  image: "https://k0n.abe.mytemp.website/wp-content/uploads/2024/10/Untitled-design-1.png",
  stats: [
    { value: "50+", label: "Board Members Interviewed" },
    { value: "3", label: "Sectors Analyzed" },
    { value: "15+", label: "Key Insights Identified" }
  ],
  authors: "Dr. Weifeng Chen",
  institution: "Brunel Business School & Govrn"
};
---

<Layout title="Resources - Govrn Board Management Software">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Resources to Power Your
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Board's Success
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Explore our collection of guides, research, and best practices to enhance your board management and governance strategies.
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Resource -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-primary to-blue-600 rounded-3xl overflow-hidden shadow-xl">
          <div class="grid lg:grid-cols-2 gap-8 p-12">
            <div class="text-white">
              <div class="flex items-center space-x-2 mb-4">
                <span class="px-3 py-1 bg-white/20 rounded-full text-sm backdrop-blur-sm">New Research</span>
              </div>
              <h2 class="text-3xl font-bold mb-4">{featuredResource.title}</h2>
              <p class="text-lg text-white/90 mb-6">{featuredResource.description}</p>
              <div class="grid grid-cols-3 gap-4 mb-8">
                {featuredResource.stats.map(stat => (
                  <div class="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
                    <div class="text-2xl font-bold">{stat.value}</div>
                    <div class="text-sm text-white/80">{stat.label}</div>
                  </div>
                ))}
              </div>
              <div class="mb-8">
                <p class="text-white/90">By {featuredResource.authors}</p>
                <p class="text-white/80 text-sm">{featuredResource.institution}</p>
              </div>
              <div class="flex space-x-4">
                <a
                  href="/research/boardroom-ai-adoption"
                  class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
                >
                  Read Full Paper
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
                <a
                  href="#"
                  class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white border-2 border-white hover:bg-white/10 transition-colors duration-200"
                >
                  Download PDF
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                  </svg>
                </a>
              </div>
            </div>
            <div class="relative">
              <img
                src={featuredResource.image}
                alt="Featured Resource"
                class="rounded-xl shadow-lg transform hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-white/20"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Resource Categories -->
    {categories.map((category, index) => (
      <section class={`py-20 ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center space-x-4 mb-12">
            <span class="text-4xl">{category.icon}</span>
            <div>
              <h2 class="text-3xl font-bold text-gray-900">{category.title}</h2>
              <p class="text-gray-600 mt-2">{category.description}</p>
            </div>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {category.resources.map(resource => (
              <div class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-shadow duration-300 overflow-hidden">
                <img
                  src={resource.image}
                  alt={resource.title}
                  class="w-full h-48 object-cover"
                />
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">
                      {resource.type}
                    </span>
                    {resource.readTime && (
                      <span class="text-sm text-gray-500">{resource.readTime}</span>
                    )}
                    {resource.date && (
                      <span class="text-sm text-gray-500">{resource.date}</span>
                    )}
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {resource.title}
                  </h3>
                  <p class="text-gray-600 mb-4">{resource.description}</p>
                  <a
                    href="#"
                    class="text-primary hover:text-primary/90 font-medium inline-flex items-center group"
                  >
                    Learn More
                    <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    ))}

    <!-- Newsletter Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl p-12 shadow-sm">
          <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Stay Updated with Govrn Insights
            </h2>
            <p class="text-gray-600 mb-8">
              Subscribe to our newsletter for the latest resources, industry trends, and best practices in board management.
            </p>
            <form class="flex gap-4 max-w-md mx-auto">
              <input
                type="email"
                placeholder="Enter your email"
                class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
              />
              <button
                type="submit"
                class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-200"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>