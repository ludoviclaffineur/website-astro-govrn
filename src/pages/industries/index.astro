---
import Layout from '../../layouts/Layout.astro';

const industries = [
  {
    name: "Financial Services",
    icon: "ğŸ¦",
    description: "Secure and compliant board management for banks, insurance, and investment firms",
    link: "/industries/financial-services",
    features: [
      "Regulatory compliance automation",
      "Secure document management",
      "Risk monitoring"
    ]
  },
  {
    name: "Healthcare",
    icon: "ğŸ¥",
    description: "HIPAA-compliant solutions for healthcare organizations",
    link: "/industries/healthcare",
    features: [
      "HIPAA compliance",
      "Clinical governance",
      "Quality assurance"
    ]
  },
  {
    name: "Real Estate",
    icon: "ğŸ¢",
    description: "Streamlined board management for property investment and management",
    link: "/industries/real-estate",
    features: [
      "Portfolio oversight",
      "Investment tracking",
      "Asset management"
    ]
  }
];
---

<Layout title="Industry Solutions | Govrn Board Management Software">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Industry-Specific
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Board Solutions
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Discover how Govrn adapts to your industry's unique requirements with tailored features and compliance standards.
          </p>
        </div>
      </div>
    </section>

    <!-- Industries Grid -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {industries.map(industry => (
            <a href={industry.link} class="group">
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 h-full hover:shadow-xl transition-all duration-300">
                <div class="text-4xl mb-6">{industry.icon}</div>
                <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors">
                  {industry.name}
                </h2>
                <p class="text-gray-600 mb-6">{industry.description}</p>
                <ul class="space-y-3">
                  {industry.features.map(feature => (
                    <li class="flex items-center text-gray-600">
                      <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>