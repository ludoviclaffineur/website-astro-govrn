---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';

const challenges = [
  {
    title: "Portfolio Management",
    description: "Streamline oversight of diverse real estate portfolios",
    icon: "üè¢"
  },
  {
    title: "Investment Decisions",
    description: "Facilitate data-driven property investment decisions",
    icon: "üìà"
  },
  {
    title: "Stakeholder Communication",
    description: "Enhance communication with investors and partners",
    icon: "üí¨"
  }
];

const features = [
  {
    title: "Portfolio Dashboard",
    description: "Real-time overview of property performance metrics",
    icon: "üìä"
  },
  {
    title: "Investment Analytics",
    description: "AI-powered analysis of investment opportunities",
    icon: "üîç"
  },
  {
    title: "Document Management",
    description: "Centralized storage for property documentation",
    icon: "üìë"
  }
];

const caseStudies = [
  {
    company: "Care Property Invest",
    logo: "https://carepropertyinvest.be/wp-content/uploads/logo_header_ext.png",
    quote: "Govrn embraced the next generation of Board management software, easy to use and with AI integration.",
    author: "Nathalie Byl",
    role: "Paralegal en Compliance Officer",
    link: "/case-studies/care-property-invest"
  }
];
---

<Layout title="Real Estate Board Management Software | Govrn">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
            Real Estate
          </div>
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Board Management Software for
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Real Estate
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-12">
            Streamline your real estate board operations with powerful tools designed for property investment and management.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/try"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
            >
              Start Free Trial
            </a>
            <a
              href="#demo"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
            >
              Request Demo
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Challenges Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Real Estate Challenges We Solve
          </h2>
          <p class="text-xl text-gray-600">
            Address key challenges facing real estate boards with our comprehensive solution.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {challenges.map(challenge => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{challenge.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{challenge.title}</h3>
              <p class="text-gray-600">{challenge.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Real Estate-Specific Features
          </h2>
          <p class="text-xl text-gray-600">
            Purpose-built features for real estate board management.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Case Studies Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Real Estate Success Stories
          </h2>
          <p class="text-xl text-gray-600">
            See how leading real estate organizations transform their board operations with Govrn.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {caseStudies.map(study => (
            <a href={study.link} class="group">
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 h-full flex flex-col">
                <div class="flex items-center justify-center h-16 mb-8">
                  <img
                    src={study.logo}
                    alt={`${study.company} logo`}
                    class="h-full object-contain"
                  />
                </div>
                <blockquote class="flex-grow">
                  <p class="text-gray-600 mb-6">"{study.quote}"</p>
                </blockquote>
                <div>
                  <p class="font-medium text-gray-900">{study.author}</p>
                  <p class="text-gray-500">{study.role}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <CTA />
  </main>
</Layout>