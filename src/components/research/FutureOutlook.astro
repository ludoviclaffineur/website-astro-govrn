---
<section class="py-16 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Future Outlook</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Our research reveals transformative trends that will shape the future of AI in board management over the next five years.
      </p>
    </div>

    <!-- Market Projections -->
    <div class="bg-gradient-to-br from-primary to-blue-600 rounded-2xl p-8 mb-16 text-white">
      <h3 class="text-2xl font-bold mb-8">Market Growth Projections</h3>
      <div class="grid grid-cols-3 gap-8">
        {marketProjections.map(projection => (
          <div class="text-center">
            <div class="text-4xl font-bold mb-2">{projection.value}</div>
            <div class="text-sm opacity-90 mb-2">{projection.year}</div>
            <div class="text-lg font-semibold text-green-300">{projection.growth}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Trends -->
    <div class="space-y-12">
      {trends.map(trend => (
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
          <div class="flex items-start space-x-4 mb-8">
            <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center text-2xl">
              {trend.icon}
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{trend.title}</h3>
              <p class="text-gray-600">{trend.description}</p>
              <div class="flex items-center space-x-4 mt-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary/10 text-primary">
                  {trend.timeline}
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  Impact: {trend.impact}
                </span>
              </div>
            </div>
          </div>

          <div class="grid md:grid-cols-3 gap-6">
            {trend.points.map(point => (
              <div class="bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-xl p-6 border border-primary/10">
                <div class="flex items-start justify-between mb-4">
                  <h4 class="text-lg font-semibold text-primary">{point.title}</h4>
                  <div class="text-sm font-medium text-primary bg-primary/10 rounded-full px-3 py-1">
                    {point.readiness} Ready
                  </div>
                </div>
                <p class="text-gray-600 text-sm">{point.description}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <a
        href="#"
        class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300 group"
      >
        Download Full Research Report
        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
        </svg>
      </a>
    </div>
  </div>
</section>